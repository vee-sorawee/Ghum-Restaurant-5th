<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/header") %>

    <!-- CSS -->
    <link rel="stylesheet" href="/css/checkout.css" />
    <link rel="stylesheet" href="/css/index.css" />
  </head>
  <body>
    <%- include("partials/nav") %>
    <!-- Checkout section -->
    <section class="h-100 h-custom" style="background-color: #d2c9ff">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-12">
            <div
              class="card card-registration card-registration-2"
              style="border-radius: 15px"
            >
              <div class="card-body p-0">
                <div class="row g-0">
                  <!-- Left cart -->
                  <div class="col-lg-8">
                    <div class="p-5" id="container1">
                      <div
                        id="container2"
                        class="cart-top d-flex justify-content-between align-items-center mb-5"
                      >
                        <h1 class="fw-bold mb-0 text-black">Shopping Cart</h1>
                        <h4>
                          <span class="badge bg-success rounded-pill badge-item"
                            ><% if (carts != 0) { %>
                              <%let sum = 0 %>
                              <% for( let i = 0; i < carts.length; i++ ) { %>
                                <% menus.forEach(menu => { %> 
                                <% if (carts[i].itemId == menu._id) { %>
                                    <% sum += carts[i].quantity%>
                                <% } %> 
                                <% }); %> 
                                <% } %>
                                <%= sum %>
                              <% } else { %>
                                <%= 0 %>
                              <% } %></span
                          >
                        </h4>
                      </div>
                      <hr class="my-4" />
                      <div class="my-4" id="container3">
                        <!-- Item start -->
                        <% for( let i = 0; i < carts.length; i++ ) { %> 
                        <%menus.forEach(menu => { %> 
                        <% if (carts[i].itemId == menu._id) { %>
                        <div
                          class="item row mb-4 d-flex justify-content-between align-items-center"
                        >
                          <div class="col-md-2 col-lg-2 col-xl-2">
                            <img
                              src="<%=menu.img%>"
                              class="img-fluid rounded-3"
                              alt="Cotton T-shirt"
                            />
                          </div>
                          <div class="col-md-3 col-lg-3 col-xl-3">
                            <h6 class="text-muted"><%=menu.category%></h6>
                            <h6 class="text-black mb-0"><%=menu.title%></h6>
                          </div>
                          <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                            <button
                              class="btn btn-link px-2"
                              onclick="updateCartItemQuantity('<%= menu._id %>', -1)"
                            >
                              <i class="fas fa-minus"></i>
                            </button>

                            <input
                              id="form1"
                              min="0"
                              name="quantity"
                              value="<%=carts[i].quantity%>"
                              type="number"
                              class="form-control form-control-sm text-md-center"
                            />

                            <button
                              class="btn btn-link px-2"
                              onclick="updateCartItemQuantity('<%= menu._id %>', 1)"
                            >
                              <i class="fas fa-plus"></i>
                            </button>
                          </div>
                          <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                            <h6 class="mb-0">$ <%=menu.price%></h6>
                          </div>
                          <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                            <a href="#!" class="text-muted" onclick="deleteItem('<%= menu._id %>')"
                              ><i class="fas fa-times"></i
                            ></a>
                          </div>
                        </div>
                        <hr class="my-4" />
                        <% } %> <% }); %> <% } %>
                        <!-- Item end -->
                        <% if (carts.length == 0) { %>
                          <p>No item in this cart.</p>
                         <% } %>
                      </div>

                      <!-- Back to shop btn -->
                      <div class="pt-4">
                        <h6 class="mb-0">
                          <a href="/" class="text-body text-decoration-none"
                            ><i class="fas fa-long-arrow-alt-left me-2"></i>Back
                            to shop</a
                          >
                        </h6>
                      </div>
                      <!-- End Back to shop btn -->
                    </div>
                  </div>
                  <!-- End Left cart -->

                  <!-- Right cart (Summary) -->
                  <div class="col-lg-4 bg-grey">
                    <div class="p-5">
                      <h3 class="fw-bold mb-5 mt-2 pt-1">Summary</h3>
                      <hr class="my-4" />

                      <div class="d-flex justify-content-between mb-4">
                        <h5 class="text-uppercase">
                          items
                          <span class="badge bg-success rounded-pill badge-item"
                            >
                            <% if (carts != 0) { %>
                              <%let sum = 0 %>
                              <% for( let i = 0; i < carts.length; i++ ) { %>
                                <% menus.forEach(menu => { %> 
                                <% if (carts[i].itemId == menu._id) { %>
                                    <% sum += carts[i].quantity%>
                                <% } %> 
                                <% }); %> 
                                <% } %>
                                <%= sum %>
                              <% } else { %>
                                <%= 0 %>
                              <% } %>
                            </span
                          >
                        </h5>
                        <h5 id="Total"><% if (carts != 0) { %>
                          <%let sum = 0 %>
                          <% for( let i = 0; i < carts.length; i++ ) { %>
                            <% menus.forEach(menu => { %> 
                            <% if (carts[i].itemId == menu._id) { %>
                                <% sum += carts[i].quantity * menu.price%>
                            <% } %> 
                            <% }); %> 
                            <% } %>
                            $<%= sum.toFixed(2) %>
                          <% } else { %>
                            $<%=  %>
                          <% } %></h5>
                      </div>

                      <h5 class="text-uppercase mb-3">Shipping</h5>

                      <div class="mb-4 pb-2">
                        <select class="select">
                          <option value="1">
                            Standard-Delivery- $<span id="standard-deli"
                              >2.00</span
                            >
                          </option>
                        </select>
                      </div>

                      <hr
                        class="mt-2 mb-4"
                        style="
                          height: 0;
                          background-color: transparent;
                          opacity: 0.75;
                          border-top: 2px dashed #9e9e9e;
                        "
                      />

                      <div class="d-flex justify-content-between">
                        <h5 class="text-uppercase">Total price</h5>
                        <h5 id="supertotal"><% if (carts != 0) { %>
                          <%let sum = 0 %>
                          <% for( let i = 0; i < carts.length; i++ ) { %>
                            <% menus.forEach(menu => { %> 
                            <% if (carts[i].itemId == menu._id) { %>
                                <% sum += carts[i].quantity * menu.price%>
                            <% } %> 
                            <% }); %> 
                            <% } %>
                            $<%= (sum+2).toFixed(2) %>
                          <% } else { %>
                            $<%=  %>
                          <% } %></h5>
                      </div>

                      <hr class="my-4" />

                      <div class="address-box">
                        <h4 class="mb-3">Your Address</h4>
                        <form
                          class="needs-validation"
                          action="/checkout"
                          novalidate=""
                          method="post"
                        >
                        
                          <div>
                            <div class="p-4">
                              <% if (Object.keys(user.address.location).length != 0) { %>
                              <p>
                                <button
                                  class="btn btn-outline-dark"
                                  type="button"
                                  data-bs-toggle="collapse"
                                  data-bs-target="#collapseExample"
                                  aria-expanded="false"
                                  aria-controls="collapseExample"
                                >
                                  <i class="fa-solid fa-location-dot"></i>
                                  <%= user.address.name %>
                                  <i class="fa-solid fa-caret-down"></i>
                                </button>
                                <a href="/information">
                                  <button class="btn" type="button"><i class="fa-solid fa-pen-to-square"></i></button>
                                </a>
                                
                              </p>
                              <div class="collapse" id="collapseExample">
                                <div class="card card-body">
                                  <p class="font-italic mb-1">
                                    <%= user.address.location.address %>, <%=
                                    user.address.location.subDistrict %>, <%=
                                    user.address.location.district %>
                                  </p>
                                  <p class="font-italic mb-0">
                                    <%= user.address.location.province %>, <%=
                                    user.address.location.country %>, <%= user.address.location.zip
                                    %>
                                  </p>
                                  <% } else { %>
                                    <a href="/information">
                                      <button type="button" class="btn btn-outline-success"><i class="fa-solid fa-pen-to-square me-2"></i>Edit Your Address</button>
                                    </a>
                                  <% } %>
                                </div>
                              </div>
                            </div>
                            <hr class="my-4" />
                            <% if (!orders[0]) { %>

                              <button
                              class="w-100 btn btn-success btn-lg 1"
                              type="submit"
                            >
                              Checkout
                            </button>
                            <% } else { %>
                              <% orders.forEach(order => { %>
                                <% if (order.status == 'Queuing' || carts.length == 0) { %>
                                  <!-- <a href="/payment" class="disabled"> -->
                                    <p class="text-danger">Your cart is empty! or</p>
                                    <p class="text-danger">You have to complete the previous order first!</p>
                                    <button
                                      class="w-100 btn btn-success btn-lg 3"
                                      type="submit"
                                      disabled
                                    >
                                      Checkout
                                    </button>
                                  <!-- </a> -->
                                <% } %>
                                <% }) %> 
                                <% } %>
                          </div>

                          
                        </form>
                      </div>
                    </div>
                  </div>
                  <!-- End Right cart (Summary) -->
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- End Checkout section -->
    <script>
      function deleteItem(itemId) {
        fetch("/cart/delete", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ itemId }),
        })
          .then((response) => location.reload())
          .then((result) => {
            console.log(result);
          })
          .catch((error) => {
            console.error("Error:", error);
          });
      }
      function updateCartItemQuantity(itemId, quantityChange) {
        fetch("/cart/update", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ itemId, quantityChange }),
        })
          .then((response) => location.reload())
          .then((result) => {
            console.log(result);
          })
          .catch((error) => {
            console.error("Error:", error);
          });
      }
    </script>
    <%- include("partials/footer") %>
  </body>
</html>
